{
  "name": "IRIS",
  "version": "1.0.1",
  "description": "Grapheel's IRIS webapp",
  "main": "src/client/index.jsx",
  "author": "Tim Lingard",
  "license": "MIT",
  "scripts": {
    "fast-lint": "eslint \"./src/**/*.js?(x)\" -c ./package.json",
    "start-dev": "gulp start-dev",
    "postinstall": "gulp compile",
    "compile": "gulp",
    "start": "node src/server",
    "lint": "gulp lint",
    "jest": "jest",
    "test": "gulp lint && jest",
    "test-travis": "gulp lint && jest --passWithNoTests",
    "precommit": "eslint \"./src/**/*.js?(x)\" -c ./package.json && jest --passWithNoTests"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "jest-cli": "^22.1.4"
  },
  "dependencies": {
    "babel-core": "6",
    "babel-jest": "22.1.0",
    "babel-loader": "7.1.2",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.26.0",
    "del": "^3.0.0",
    "dotenv": "^4.0.0",
    "enzyme": "^3.3.0",
    "express": "^4.14.0",
    "file-loader": "^1.1.6",
    "grapheel-iris-client-api": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-env": "^0.4.0",
    "gulp-eslint": "^4.0.1",
    "gulp-line-ending-corrector": "^1.0.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "history": "^4.7.2",
    "immutable": "^3.8.1",
    "moment": "^2.19.3",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-aria-modal": "^2.12.0",
    "react-dom": "^16.2.0",
    "react-immutable-proptypes": "^2.1.0",
    "react-redux": "^5.0.6",
    "react-responsive": "^4.0.3",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "next",
    "react-select": "^1.0.0-rc.10",
    "react-spinners": "^0.2.5",
    "react-stripe-elements": "^1.4.0",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "webpack": "^3.10.0",
    "webpack-stream": "^4.0.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": [
      "react",
      "import"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "globals": {
      "Stripe": true
    },
    "rules": {
      "function-paren-newline": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "jsx-a11y/label-has-for": "warn",
      "jsx-a11y/no-autofocus": "warn",
      "jsx-a11y/no-noninteractive-element-to-interactive-role": 0,
      "jsx-a11y/no-noninteractive-tabindex": 1,
      "jsx-a11y/no-redundant-roles": 0,
      "no-console": 0,
      "no-restricted-globals": "warn",
      "react/forbid-prop-types": [
        1
      ],
      "react/no-array-index-key": 0,
      "react/no-unescaped-entities": [
        0
      ],
      "react/no-unused-state": "warn",
      "react/require-default-props": 0,
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Map",
            "List"
          ]
        }
      ]
    }
  }
}
